datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id                     String         @id @default(cuid())
  name                   String         @default("")
  email                  String         @unique @default("")
  password               String
  isAdmin                Boolean        @default(false)
  from_Restaurant_user   Restaurant[]   @relation("Restaurant_user")
  from_FoodCategory_user FoodCategory[] @relation("FoodCategory_user")
}

model Restaurant {
  id     String  @id @default(cuid())
  name   String  @default("")
  user   User?   @relation("Restaurant_user", fields: [userId], references: [id])
  userId String? @map("user")

  @@index([userId])
}

model FoodCategory {
  id     String  @id @default(cuid())
  name   String  @default("")
  user   User?   @relation("FoodCategory_user", fields: [userId], references: [id])
  userId String? @map("user")

  @@index([userId])
}